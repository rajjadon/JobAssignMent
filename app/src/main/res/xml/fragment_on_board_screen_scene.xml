<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@layout/end_login"
        motion:constraintSetStart="@layout/start_login"
        motion:duration="5000">

        <KeyFrameSet>

            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@+id/ivDummy"
                motion:percentX="1"
                motion:percentY="1" />

            <KeyPosition
                motion:framePosition="60"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@+id/ivDummy"
                motion:percentX="0"
                motion:percentY="0" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="50"
                motion:motionTarget="@+id/mainCons"
                motion:percentX="0"
                motion:percentY="0" />

            <KeyAttribute
                android:alpha="1"
                motion:framePosition="60"
                motion:motionTarget="@+id/mainCons"
                motion:percentX="1"
                motion:percentY="1" />

        </KeyFrameSet>

    </Transition>

</MotionScene>